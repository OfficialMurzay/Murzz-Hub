-- Function to create Boom quest UI
local function createBoomQuestUI(questFolder)
    if not questFolder then return end
    QuestsTab:CreateSection(questFolder.Name .. " üèπ")

    local progressFolder = questFolder:FindFirstChild("Progress")
    local requirementsFolder = questFolder:FindFirstChild("Requirements")
    local rewardsFolder = questFolder:FindFirstChild("Rewards")

    -- Progress
    if progressFolder and requirementsFolder then
        for _, statValue in ipairs(progressFolder:GetChildren() or {}) do
            local statID = tonumber(statValue.Name)
            local statName = StatIdMap[statID] or "Unknown"
            local emoji = StatEmojis[statName] or ""
            local requirementValue = requirementsFolder:FindFirstChild(statValue.Name)
            local requirement = requirementValue and requirementValue.Value or 0
            QuestsTab:CreateLabel(formatNumber(statValue.Value) .. "/" .. formatNumber(requirement) .. " " .. statName .. " " .. emoji)
        end
    end

    -- Rewards
    if rewardsFolder then
        local rewardParts = {}
        for _, reward in ipairs(rewardsFolder:GetChildren() or {}) do
            if reward:IsA("IntValue") then
                if reward.Name == "Yen" then
                    table.insert(rewardParts, formatNumber(reward.Value).." üí∞")
                elseif reward.Name == "Chikara" then
                    table.insert(rewardParts, formatNumber(reward.Value).." üíé")
                elseif reward.Name == "Power" then
                    local powerName = PowerMap[reward.Value] or "Unknown Power"
                    table.insert(rewardParts, powerName)
                end
            end
        end
        if #rewardParts > 0 then
            QuestsTab:CreateLabel("Rewards: "..table.concat(rewardParts, ", "))
        end
    end
end

-- Detect current Boom quest
local currentBoom
for _, child in ipairs(QuestsFolder:GetChildren() or {}) do
    if child:IsA("Folder") and child.Name:match("Boom") then
        currentBoom = child
        break
    end
end

if currentBoom then
    createBoomQuestUI(currentBoom)
else
    QuestsTab:CreateSection("No active Boom quest üïµÔ∏è‚Äç‚ôÇÔ∏è")
end


-- ========================
-- Load Configuration
-- ========================
Rayfield:LoadConfiguration()
