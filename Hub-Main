task.wait(2)

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local displayName = player.DisplayName or player.Name -- fallback to username if needed

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

task.wait(2)

-- Create the window with dynamic display name
local Window = Rayfield:CreateWindow({
   Name = "Murzz Hub v1 | @" .. displayName,
   Icon = 0, -- Icon in Topbar. Can use Lucide Icons (string) or Roblox Image (number). 0 to use no icon (default).
   LoadingTitle = "Loading Murzz Hub",
   LoadingSubtitle = "by Murzay",
   ShowText = "Powered By Rayfield",
   Theme = "Default",

   ToggleUIKeybind = "K",

   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false,

   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil,
      FileName = "MurzzHub"
   },

   Discord = {
      Enabled = false,
      Invite = "noinvitelink",
      RememberJoins = true
   },

   KeySystem = true,
   KeySettings = {
      Title = "Murzz Hub | Key System",
      Subtitle = "BETA v1",
      Note = "In BETA so free key!! Key is: Murzay",
      FileName = "MurzzKey",
      SaveKey = false,
      GrabKeyFromSite = false,
      Key = {"Murzay"}
   }
})

-- Discord Notify (10 mins)
while true do
   task.wait(600)
   Rayfield:Notify({
      Title = "Enjoy Murzz Hub?",
      Content = "Join the Discord!",
      Duration = 6.5,
      Image = 4483362458,
   })
end

-- World One Exclusive (Game id: 76558904092080)

Rayfield:Notify({
   Title = "World One Script Loaded",
   Content = "Enjoy the BETA script!",
   Duration = 6.5,
   Image = 4483362458,
})

local 1MainTab = Window:CreateTab("Main", 0) -- Title, Image
local 1Section = 1MainTab:CreateSection("Ore Farm")
local 1Dropdown = 1MainTab:CreateDropdown({
   Name = "Select Ore(s)",
   Options = {"Pebble","Rock","Boulder"},
   CurrentOption = {"Pebble"},
   MultipleOptions = true,
   Flag = "Dropdown1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
   Callback = function(Options)
   -- The function that takes place when the selected option is changed
   -- The variable (Options) is a table of strings for the current selected options
   end,
})




























Rayfield:LoadConfiguration()
