-- Load Rayfield
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

-- Create the Window
local Window = Rayfield:CreateWindow({
    Name = "Murzz Hub | AFSE",
    LoadingTitle = "Murzz Hub | AFSE",
    LoadingSubtitle = "by You",
    ConfigurationSaving = {
       Enabled = false,
    },
    KeySystem = false
})

-- Home Tab
local HomeTab = Window:CreateTab("Home", 4483362458)

-- Live Stats Section
local LiveStatsSection = HomeTab:CreateSection("Live Stats")

-- Stats
local stats = {"Durability", "Agility", "Speed", "Sword", "Strength", "Chakra"}

for _, stat in ipairs(stats) do
    -- Stat name
    HomeTab:CreateLabel(stat)
    -- Number underneath
    HomeTab:CreateLabel("0")
    -- Separator
    HomeTab:CreateLabel("-----")
end
