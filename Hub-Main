local TeleportsTab = Window:CreateTab("Teleports ğŸ“")
local function getCharacter() return Player.Character or Player.CharacterAdded:Wait() end
local function teleportTo(pos)
    local char=getCharacter()
    if char and char.PrimaryPart then char:SetPrimaryPartCFrame(CFrame.new(pos+Vector3.new(0,5,0))) end
end
-- Best Stat Zones
TeleportsTab:CreateSection("Best Stat Zones ğŸ“Š")
for statName,zones in pairs(ZonePositions) do
    local playerStat = StatsFolder:FindFirstChild(tostring({Strength="1",Durability="2",Chakra="3",Sword="4",Agility="5",Speed="6"}[statName]))
    if playerStat then
        local currentZone
        local function updateZone()
            local value=playerStat.Value
            currentZone=nil
            for k,v in pairs(zones) do if value>=tonumber(k:gsub("[^%d]","")) then currentZone=v end end
        end
        updateZone()
        playerStat:GetPropertyChangedSignal("Value"):Connect(updateZone)
        TeleportsTab:CreateButton({
            Name=statName.." "..({Strength="ğŸ’ª",Durability="ğŸ›¡ï¸",Chakra="ğŸŒ€",Sword="âš”ï¸",Agility="â˜ï¸",Speed="ğŸ’¨"})[statName],
            Callback=function() if currentZone then teleportTo(currentZone) end
        end})
    end
end
-- Individual Stat Sections
for statName,zones in pairs(ZonePositions) do
    local section=TeleportsTab:CreateSection(statName.." "..({Strength="ğŸ’ª",Durability="ğŸ›¡ï¸",Chakra="ğŸŒ€",Sword="âš”ï¸",Agility="â˜ï¸",Speed="ğŸ’¨"})[statName])
    for k,v in pairs(zones) do
        TeleportsTab:CreateButton({
            Name=formatNumber(tonumber(k:gsub("[^%d]",""))).." "..statName.." ğŸ“",
            Callback=function() teleportTo(v) end
        })
    end
end

