-- Load Rayfield
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

-- Create the Window
local Window = Rayfield:CreateWindow({
    Name = "Murzz Hub | AFSE",
    LoadingTitle = "Murzz Hub | AFSE",
    LoadingSubtitle = "by You",
    ConfigurationSaving = {
       Enabled = true,
       FolderName = nil, -- Customize folder
       FileName = "MurzzHubSettings"
    },
    Discord = {
       Enabled = false,
       Invite = "", 
       RememberJoins = true 
    },
    KeySystem = false
})

-- Home Tab
local HomeTab = Window:CreateTab("Home", 4483362458)

-- Live Stats Section
local LiveStatsSection = HomeTab:CreateSection("Live Stats")

-- Stats
local stats = {"Durability", "Agility", "Speed", "Sword", "Strength", "Chakra"}
local statsValues = {}

for _, stat in ipairs(stats) do
    HomeTab:CreateLabel(stat)
    local valueLabel = HomeTab:CreateLabel("0")
    statsValues[stat] = valueLabel
    HomeTab:CreateLabel("-----")
end

-- Function to update stats dynamically
local function UpdateStat(statName, newValue)
    if statsValues[statName] then
        statsValues[statName].Label.Text = tostring(newValue)
    end
end

-- Auto Train Tab
local AutoTrainTab = Window:CreateTab("Auto Train", 4483362458)

-- Auto Train Toggles
local autoTrainToggles = {}
for _, stat in ipairs(stats) do
    AutoTrainTab:CreateToggle({
        Name = "Auto " .. stat,
        CurrentValue = false,
        Flag = "Auto"..stat,
        Callback = function(Value)
            autoTrainToggles[stat] = Value
        end
    })
end

-- Teleports Tab
local TeleportsTab = Window:CreateTab("Teleports", 4483362458)

-- Utilities Tab
local UtilitiesTab = Window:CreateTab("Utilities", 4483362458)
