-------------------------------------------------
-- HOME TAB FUNCTIONALITY (PLAYER DATA ONLY)
-------------------------------------------------
RunService.Heartbeat:Connect(function()
    -- Class
    local classVal = OtherData:FindFirstChild("Class")
    if classVal then
        ClassLabel.Text = "Class: "..(ClassMap[classVal.Value] or "Unknown â“")
    end

    -- Total Power
    local tp = OtherData:FindFirstChild("TotalPower")
    if tp then
        PowerLabel.Text = "Total Power: "..abbreviateNumber(tp.Value).." âš¡"
    end

    -- Money
    local yen = OtherData:FindFirstChild("Yen")
    if yen then
        YenLabel.Text = "Money: "..abbreviateNumber(yen.Value).." ğŸ’°"
    end

    -- Chikara
    local chi = OtherData:FindFirstChild("Chikara")
    if chi then
        ChikaraLabel.Text = "Chikara: "..abbreviateNumber(chi.Value).." ğŸ’"
    end
end)

